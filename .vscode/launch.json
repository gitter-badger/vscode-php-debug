{
	"version": "0.2.0",
	"configurations": [
		{
			"name": "Launch Extension",
			"type": "extensionHost",
			"request": "launch",
			"runtimeExecutable": "${execPath}",
			"args": [
				"--extensionDevelopmentPath=${workspaceRoot}"
			],
			"stopOnEntry": false,
			"sourceMaps": true,
			"outDir": "./out"
		},
		{
			"name": "mock-debug server",
			"type": "node",
			"request": "launch",
			"runtimeArgs": ["--harmony"],
			"program": "./mock/mockDebug.ts",
			"stopOnEntry": false,
			"args": [ "--server=4711" ],
			"sourceMaps": true,
			"outDir": "./out",
			"externalConsole": false
		},
		{
			"name": "mock test",
			"type": "mock",
			"request": "launch",
			"program": "readme.md",
			"stopOnEntry": true
		}
	]
}
